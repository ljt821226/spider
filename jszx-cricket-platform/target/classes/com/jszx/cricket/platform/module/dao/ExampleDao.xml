<?xml version="1.0" encoding="UTF-8" ?>  
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.jszx.cricket.platform.module.dao.ExampleDao">

	<sql id="common_field">
		<![CDATA[
			SELECT
				id as "id",
				name as "name"
			FROM
			    test s
		]]>
	</sql>

	<!-- 单条查询 -->
	<select
		id="select"
		resultType="com.jszx.cricket.platform.module.entity.ExampleEntity">
		<include refid="common_field"></include>
	</select>

	<!-- 批量查询 -->
	<select
		id="selectBatch"
		resultType="com.jszx.cricket.platform.module.entity.ExampleEntity">
		<include refid="common_field"></include>
	</select>

	<!-- 分页查询 -->
	<select
		id="selectPage"
		resultType="com.jszx.cricket.platform.module.entity.ExampleEntity">
		<include refid="common_field"></include>
	</select>

	<!-- 更新操作 -->
	<update id="update">
		<![CDATA[
			update 
		 		test s 
		]]>
		<set>
			<if test="name != null and name != ''">
				<![CDATA[
					s.name=#{name}
				]]>
			</if>
		</set>
		<where>
			<![CDATA[
				 s.id=#{id}
			]]>
		</where>
	</update>

	<!-- 批量更新 -->
	<update id="updateBatch">
		<foreach
			collection="array"
			item="item"
			index="index"
			open="begin"
			close="end;"
			separator=";">  
                <![CDATA[
					update 
				 		test s 
				]]>
			<set>
				<if test="name != null and name != ''">
						<![CDATA[
							s.name=#{name}
						]]>
				</if>
			</set>
			<where>
					<![CDATA[
						 s.id=#{id}
					]]>
			</where>
		</foreach>
	</update>

	<!-- 刪除操作 -->
	<delete id="delete">
		delete from test where id=#{id}
	</delete>

	<!-- 批量刪除操作 -->
	<delete id="deleteBatch">
		delete from test where id in
		<foreach
			collection="array"
			index="index"
			item="item"
			open="("
			separator=","
			close=")">
			#{item.id}
		</foreach>
	</delete>

	<!-- 插入操作 -->
	<insert id="insert">
		<![CDATA[
			INSERT
				INTO
				    test
				    (
						id,
						name
        			)
				    VALUES
				    (
					    	#{id},
					    	#{name}
    				)
		]]>
	</insert>

	<!-- 批量插入操作 -->
	<insert id="insertBatch">
		<![CDATA[
			INSERT
				INTO
				    test
				    (
						id,
						name
        			)
				    VALUES
		]]>
		<foreach
			collection="array"
			item="item"
			index="index"
			separator=",">  
        	<![CDATA[
				(
			    	#{id},
				    #{name}
    			)
			]]>
		</foreach>
	</insert>

</mapper> 